@model ProiectDAW.Models.Product
@{
    ViewBag.Titlu = "Edit";
}

<h1>Editarea produsului: @Model.Title</h1>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Products"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.Hidden("ProductId")

    @Html.Label("Title", "Numele produsului")
    <br />
    @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Price", "Pretul produsului")
    <br />
    @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Price", null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Description", "Descrierea produsului")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
    <br /><br />

    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
    <br />

    <label>Selectati o imagine</label>
    @Html.DropDownListFor(m => m.ImageId, new SelectList(Model.Imag, "Value", "Text"),
    "Selectati o imagine", new { @class = "form-control" })
    @Html.ValidationMessage("ImageId", null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary button_class" type="submit">Modifica produsul</button>
}